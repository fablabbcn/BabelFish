{
    "name": "chrome-messeger",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Exchange messages with an extension.",
    "app": {
	"background": {
	    "scripts": [ "background.js" ],
	    "persistent": true
	}
    },
    "externally_connectable": {
	"matches": [
	    "http://localhost:8080/*"
	]
    }
}
